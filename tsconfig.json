{
    "compilerOptions": {
        "outDir": "./.tsbuild/",
        "sourceMap": false,
        "target": "es2022",
        "module": "commonjs",
        "removeComments": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "types": [
            "node",
            "@wdio/mocha-framework",
            "expect-webdriverio",
            "@wdio/globals/types",
        ],
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        // "skipLibCheck": true
    },
    "include": [
        "./config/**/*.ts",
        "./test/**/*.ts"
    ]
}